<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheetPeakTitle"
    android:layout_width="match_parent"
    android:layout_height="50dp">


    <TextView
        android:id="@+id/currentSelectionText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/nowplaying_card_shape"
        android:backgroundTint="@color/black"
        android:textColor="@color/alphabet_background_color"
        android:drawablePadding="5dp"
        android:layout_marginStart="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/nowplaying_card_shape"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/black">

            <ImageView
                android:id="@+id/shuffleImage"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_highlight"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_shuffle_black" />
            <FrameLayout
                android:id="@+id/repeatFrameLayout"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_highlight"
                android:layout_marginEnd="5dp">
                <ImageView
                    android:id="@+id/repeatImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_repeat_black_24dp" />
                <ImageView
                    android:id="@+id/repeatOneImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:src="@drawable/ic_repeat_one_24dp" />
            </FrameLayout>
            <ImageView
                android:id="@+id/queueImage"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_highlight"
                android:src="@drawable/ic_queue_music_24dp"/>
            <ImageView
                android:id="@+id/search"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_highlight"
                android:src="@drawable/ic_search" />
        </LinearLayout>


</RelativeLayout>
