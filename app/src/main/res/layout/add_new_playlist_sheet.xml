<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addNewPlaylistSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/playlistSheetText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add To Playlists"
            android:textStyle="bold"
            android:textColor="@color/alphabet_background_color"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/addNewPlaylistImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@drawable/button_highlight"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_playlist_add" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addPlaylistList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false"
        android:clipToPadding="false"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/addNewPlaylistText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableTop="@drawable/ic_playlist_add"
        android:text="Add New Playlist"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/alphabet_background_color"
        android:visibility="gone"
        />
</LinearLayout>