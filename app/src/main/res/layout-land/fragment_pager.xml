<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.viewpager.widget.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/nowPlayingViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/disableTouch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="visible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_above="@id/nowplayingArtHolder"
        android:layout_alignEnd="@id/nowplayingArtHolder"
        >
        <TextView
            android:id="@+id/nowPlayingElapsedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@drawable/nowplaying_card_shape"
            android:backgroundTint="@color/blackAlpha"
            android:layout_alignParentStart="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/white"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/nowplayingDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:background="@drawable/nowplaying_card_shape"
            android:backgroundTint="@color/blackAlpha"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="20sp"
            android:visibility="gone"
            />
    </RelativeLayout>

    <!--will contain album art, play/pause, elapsed time-->
    <RelativeLayout
        android:id="@+id/nowplayingArtHolder"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@id/nowPlayingInvisibleCenterLine"
        android:clipChildren="true"
        android:background="@drawable/nowplaying_card_shape">
        <ImageView
            android:id="@+id/foregroundAlbumArt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.rigid.powertunes.Seekbars.NowPlayingSeekbar
            android:id="@+id/nowPlayingSeekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/NowPlayingProgressStyle"
            android:thumb="@drawable/custom_thumb"
            android:progress="20"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:indeterminate="false"
            android:visibility="gone"
            android:progressTint="#000000"
            android:alpha="0.5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nowPlayingControlsHolder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/nowplayingArtHolder"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:background="@drawable/nowplaying_card_shape"
        android:backgroundTint="@color/blackAlpha"
        android:layout_alignEnd="@id/nowplayingArtHolder"
        >

        <ImageView
            android:id="@+id/nowPlayingShuffle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_shuffle_black" />
        <FrameLayout
            android:id="@+id/nowPlayingRepeatHolder"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_highlight">
            <ImageView
                android:id="@+id/nowPlayingRepeat"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_repeat_black_24dp" />
            <ImageView
                android:id="@+id/nowPlayingRepeatOne"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:visibility="gone"
                android:src="@drawable/ic_repeat_one_24dp"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/nowPlayingPlayPauseHolder"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:id="@+id/nowPlayingPlayBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_highlight"
                android:src="@drawable/ic_play"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/nowPlayingPauseBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_highlight"
                android:src="@drawable/ic_pause"
                android:visibility="visible"/>
        </FrameLayout>
    </RelativeLayout>
    <View
        android:id="@+id/nowPlayingInvisibleCenterLine"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />
</RelativeLayout>
